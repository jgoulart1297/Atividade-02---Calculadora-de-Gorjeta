<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="br.com.jgoulart.atividade02_calculadoradegorjeta.MainActivity">


    <EditText
        android:id="@+id/etValorConta"
        android:layout_width="269dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorAccent"
        android:ems="10"
        android:inputType="numberDecimal"
        android:lineSpacingExtra="8sp" />

    <LinearLayout
        android:layout_width="269dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtPorcentagem"
            android:layout_width="27dp"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/sbPorcentagem"
            android:layout_width="201dp"
            android:layout_height="match_parent"
            android:max="30"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="269dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:lineSpacingExtra="8sp"
            android:text="Gorjeta" />

        <TextView
            android:id="@+id/txtGorjeta"
            android:layout_width="201dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:background="@color/colorAccent"
            android:lineSpacingExtra="8sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="269dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8sp"
            android:text="Total" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="201dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:background="@color/colorAccent"
            android:textAlignment="viewStart" />

    </LinearLayout>


</LinearLayout>
